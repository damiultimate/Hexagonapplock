<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:passcode="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:background="#ffffff"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="#770F0F0F"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:id="@+id/remembered">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="top"
        android:textSize="18sp"
        android:layout_margin="14dp"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF"
        android:text="Hexagon App Lock"
/>

        <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:src="@drawable/icon"
        android:id="@+id/appimage"
        android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="top"
                android:textSize="16sp"
                android:id="@+id/statement"
                android:layout_margin="14dp"
                android:layout_marginBottom="5dp"
                android:textColor="#FFFFFF"
                android:text="For Security reasons, This app has been locked"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="-55dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="18sp"
            android:id="@+id/unlock"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:text="Enter Password Here"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:hint="Enter password here"
            android:textColorHint="#999999"
            android:visibility="gone"
            android:background="@drawable/edittext5"/>
        <com.andrognito.patternlockview.PatternLockView
            android:layout_width="330dp"
            android:layout_height="330dp"
            app:dotCount="3"
            app:normalStateColor="#FFFFFF"
            app:wrongStateColor="#FF0000"
            app:correctStateColor="#47BA0A"
            android:layout_gravity="center"
            android:id="@+id/pattern"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
           android:src="@drawable/biometric"
            android:visibility="visible"
            android:id="@+id/biometric"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#ffffff"
                android:layout_marginRight="9dp"
                android:id="@+id/submit"
                android:background="@drawable/edittext5"
                android:padding="9dp"
                android:textSize="17sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textColor="#ffffff"
                android:layout_marginRight="9dp"
                android:background="@drawable/edittext5"
                android:padding="9dp"
                android:id="@+id/forgot"
                android:textSize="17sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</RelativeLayout>